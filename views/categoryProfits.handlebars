{{#if admin}}

<div class = "container">
<h1>Profits per category</h1>
  <div class = "row">
    <div class = "col-xs-12">
      <div class = "table-responsive">
        <table class = "table table-striped" id = "categoryProfits">
          <thead>
            <tr>
              <th>Category Name</th>
              <th>Supplier Name</th>
              <th>Profits</th>
            </tr>
          </thead>
          {{#categoryProfits}}
            <tr>
              <td>{{category_name}}</td>
              <td>{{supplier_name}}</td>
              <td>R{{profit}}</td>
            </tr>
         {{/categoryProfits}}
        </table>
        {{else}}
				<p> Access denied</p>
				{{/if}}
      </div>
    </div>
  </div>
</div>
