<h1>Product List</h1>

<a href="/products/add">Add product</a>

<table class ="table" id = "productList">
	<tr>
		<th>Product id</th>
		<th>Product name</th>
		<th>Category name</th>
	</tr>
	{{#products}}
		<tr>
			<td>{{product_id}}</td>
			<td>{{product_name}}</td>
			<td>{{category_name}}</td>
	
			<td><a href="/products/edit/{{product_id}}">Edit</a></td>
			<td><a href="/products/delete/{{product_id}}">Delete</a></td>
		</tr>
	{{/products}}

</table>




