<h1>Sales record update</h1>
 {{#data}}

<form action="/sales/updateSales/{{sales_id}}" method = "POST" class="form-horizontal" >

	<div class="form-group">
		<label for="date" class="control-label col-xs-2">Date</label>
			<div class="col-xs-5">	 
     				<input type="date" class="form-control" name="date" placeholder="yyyy-mm-dd" required/>
			</div>
	</div> 

	<div class="form-group">
		<label for="number" class="control-label col-xs-2">Qauntity sold</label>	 
		 <div class="col-xs-5">
			<input type="number" name="qty" class="form-control" placeholder="Enter Sales Amount" required>
		</div>
	</div>


	<div class="form-group">
		<label for="number" class="control-label col-xs-2">Sales price</label>
		<div class="col-xs-5">	 
     			<input type="number" step="any" name="sales_price" placeholder="Enter Sales Price" required>
		</div>
	</div>

{{/data}}
    <div class="form-group">
		<label class="control-label col-xs-2">Product selection</label>
		<div class="col-xs-5">	 
     			<select name="product_id">
