<h1>Suppliers List</h1>

<div class = "container-fluid">
	<div class = "row">
		<div class = "col-xs-12">
		{{#admin}}
		<a href="/suppliers/addSuppliers"  class= "btn btn-primary">
		<span class= "glyphicon glyphicon-plus"></span></a>
		{{/admin}}
			<div class = "table-responsive">
				<table class = "table" id = "suppliers">
					<thead>
						<tr>
							<th>Supplier id</th>
							<th>Supplier name</th>
						</tr>
					</thead>
						{{#suppliers}}
						<tr>
							<td>{{supplier_id}}</td>
							<td>{{supplier_name}}</td>
							{{#if ../admin}}
							<td><a href="/suppliers/editSuppliers/{{supplier_id}}" class="btn btn-primary">
							<span class="glyphicon glyphicon-edit"></span></a></td>

							<td><a href="/suppliers/delete/{{supplier_id}}" class= "btn btn-primary">
							<span class="glyphicon glyphicon-trash"></span></a></td>
							{{/if}}
						</tr>
					{{/suppliers}}
				</table>
			</div>
		</div>
	</div>
</div>
