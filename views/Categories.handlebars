<h1>Category List</h1>

<div class = "container-fluid">
	<div class = "row">
		<div class = "col-xs-12">

			{{#admin}}
			<a href="/categories/addCategories"  class= "btn btn-primary">
			<span class= "glyphicon glyphicon-plus"></span></a>
			{{/admin}}

			<div class = "table-responsive">
				<table class = "table" id = "categoryList">
					<thead>
						<tr>
							<th>Category id</th>
							<th>Category name</th>
						</tr>
					</thead>
					{{#categories}}
						<tr>
							<td>{{category_id}}</td>
							<td>{{category_name}}</td>

							{{#if ../admin}}
							<td><a href="/categories/editCategories/{{category_id}}" class="btn btn-primary">
							<span class="glyphicon glyphicon-edit"></span></a></td>

							<td><a href="/categories/delete/{{category_id}}" class= "btn btn-primary">
							<span class="glyphicon glyphicon-trash"></span></a></td>
							{{/if }}
						</tr>
					{{/categories}}
				</table>
			</div>
		</div>
	</div>
</div>
