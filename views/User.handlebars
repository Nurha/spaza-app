<h1>User List</h1>

<div class = "container-fluid">
	<div class = "row">
		<div class = "col-xs-12">
      <div class = "table-responsive">
				<table class = "table" id = "userList">
					<thead>
						<tr>
							<th>User Name</th>
							<th>User Description</th>
              <!-- <th>User Status</th> -->
						</tr>
					</thead>
					{{#user}}

						<tr>
							<td>{{user_name}}</td>

							<!-- <td>{{locked}}</td> -->

							<form action="/updateDescription/{{user_name}}" method="post">
									<td><button type= "submit">{{description}}<button></td>
							</form>

             <td><a href="/user/delete/{{user_id}}" class= "btn btn-primary">
							<span class="glyphicon glyphicon-trash" onclick="return confirm('Are you sure?')"></span></a></td>
						</tr>
					{{/user}}
				</table>
			</div>
		</div>
	</div>
</div>
